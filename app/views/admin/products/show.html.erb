
<div class="row shadow-wrapper">
  <div id="crumbs">
      <ul class="nav nav-list">
        <li><a href="#">Create a new product</a></li>
        <li class="disabled"><a href="#">Upload pictures</a></li>
      </ul>
    </div>
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
<p>
  <strong>Stock:</strong>
  <%= @product.quantity %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<% @product.uploads.each do |upload| %>
  <%= image_tag(upload.image(:thumb)) %>
  <%= link_to 'Delete', [:admin, @product, upload], method: :delete, data: { confirm: "Are you sure?"} %>
<% end %>

<%= render 'admin/uploads/form' %>

<% if @product.user == current_user %>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
<% end %>
</div>
