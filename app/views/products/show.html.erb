<h2>Product details</h2>
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<% @product.uploads.each do |upload| %>
  <%= image_tag(upload.image(:medium)) %>
<% end %>


<h4>Comments</h4>
  <% @product.comments.each do |comment| %>
   <%= render 'comments/comment', comment: comment %>
  <% end %>
